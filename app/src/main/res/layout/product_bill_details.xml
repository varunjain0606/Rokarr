<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Product"
        android:id="@+id/product_bill"
        android:textColor="@android:color/black"
        android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:id="@+id/product_qty"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/product_bill"
            android:layout_toEndOf="@+id/product_bill" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Tax %"
            android:id="@+id/product_tax"
            android:textColor="@android:color/black"
            android:gravity="left"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/product_qty"
            android:layout_toEndOf="@+id/product_qty"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:id="@+id/product_amt"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>