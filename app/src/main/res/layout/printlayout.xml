            android:id="@+id/printPrice"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView41"
            android:layout_toEndOf="@+id/textView41"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dis%:"
            android:id="@+id/textView42"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:paddingBottom="5dp"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/printPrice"
            android:layout_toEndOf="@+id/printPrice"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.0"
            android:id="@+id/printDiscount"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView42"
            android:layout_toEndOf="@+id/textView42"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:drawable/ic_menu_camera"
            android:id="@+id/bt_camera"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bt_print"
            android:layout_toStartOf="@+id/bt_print"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:drawable/ic_menu_save"
            android:id="@+id/bt_print"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bt_share"
            android:layout_toStartOf="@+id/bt_share" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:drawable/ic_menu_share"
            android:id="@+id/bt_share"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView44"
            android:layout_toStartOf="@+id/textView44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
