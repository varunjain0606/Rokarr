<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gridlayoutbill1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Bill"
            android:id="@+id/gridProduct"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:gravity="left"
            android:paddingEnd="3dp"
            android:layout_alignEnd="@id/gridProduct" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/gridPrice"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="3dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/gridProduct"
            android:layout_toEndOf="@+id/gridProduct" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/gridBill"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="right" />
    </RelativeLayout>
    </LinearLayout>
