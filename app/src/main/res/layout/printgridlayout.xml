<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:singleLine="false"
            android:inputType="textMultiLine|textNoSuggestions"
            android:id="@+id/gridPro"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="product"
            android:textSize="13dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_gravity="left"
            android:id="@+id/gridQuan"
            android:textColor="@android:color/black"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/gridPro"
            android:layout_toEndOf="@+id/gridPro"
            android:textSize="13dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/gridPri"
            android:textColor="@android:color/black"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/gridQuan"
            android:layout_toRightOf="@+id/gridQuan"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="New Text"
            android:id="@+id/gridAmtt"
            android:textColor="@android:color/black"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textSize="13dp" />
    </RelativeLayout>
</LinearLayout>